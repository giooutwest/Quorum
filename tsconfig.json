{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@data": ["src/data"],
      "@data/*": ["src/data/*"],
      "@app-types": ["src/types"],
      "@app-types/*": ["src/types/*"],
      "@navigation": ["src/navigation"],
      "@navigation/*": ["src/navigation/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
